# WiFi Credentials
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# Home Assistant API
# This key will be auto-generated on first compilation
# Copy it from ESPHome logs and paste here
api_encryption_key: "YOUR_GENERATED_API_KEY_HERE"

# OTA Update Password
# Used for over-the-air firmware updates
ota_password: "YOUR_OTA_PASSWORD"

# Web Server Credentials
# Used to access http://fan-controller.local
web_username: "admin"
web_password: "YOUR_WEB_PASSWORD"